{
    "manifest_version": 3,
    "name": "DiffTracker",
    "version": "0.1.0",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "js": ["inject.js"],
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["diff_tracker.js"],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ]
}
